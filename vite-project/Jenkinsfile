pipeline {
    agent any

    tools {
        nodejs "react"
    }

    stages {
        stage('checking version') {
            steps {
               bat 'npm -v'
               bat 'node -v'
            }
        }
        stage('Building') {
            steps {   
             bat '''
             cd vite-project
             npm run build
            
             '''
            }
        }
          stage('Archive Artifacts') {
            steps {
                bat 'tar -cvf build.tar C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\React_Application\\vite-project\\dist'
                // bat 'dir'
                // bat 'type build.tar'
                // archiveArtifacts artifacts: 'build.tar', allowEmptyArchive: true
            }
        }
    }
}