pipeline {
    agent any

    tools {
        nodejs "react"
    }

    stages {
        stage('checking version') {
            steps {
               bat 'npm -v'
               bat 'node -v'
            }
        }
        stage('Building') {
            steps {   
             bat '''
             cd vite-project
             npm run build
            
             '''
            }
        }
          stage('Archive Artifacts') {
            steps {
                bat 'powershell.exe -Command "Compress-Archive -Path vite-project\\dist\\* -DestinationPath build.zip"'
 
                // bat 'dir'
                bat 'type build.tar'
                archiveArtifacts artifacts: 'build.zip', allowEmptyArchive: true
            }
        }
    }
}